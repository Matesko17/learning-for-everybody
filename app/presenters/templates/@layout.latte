<!doctype html>
<html lang="{$presenter->locale}">
    <head>

        <!-- Ha! Umíš číst zdrojáky? :-) Takové lidi neustále hledáme. Pokud Tě láká práce na zajímavých projektech, ozvi se nám na jobs@q2.cz. -->

        {* GTM *}
        {control googleTagManager:head}

        <meta charset="utf-8">

        {* <meta http-equiv="x-ua-compatible" content="ie=edge"> *}

        <title>{ifset #title}{include title} {else}{$siteSettings->get('homeTitle', $presenter->locale)} {/ifset}{$siteSettings->get('separator')} {$siteSettings->get('titleSuffix', $presenter->locale)}</title>
        {capture $seoDescription}
            <p>
            {ifset #description}
                {include description}
            {else}
                {$siteSettings->get('homeDesc', $presenter->locale)}
            {/ifset}
            </p>
        {/capture}

        <meta name="description" content="{$seoDescription|striptags|trim}">
        {* <meta n:ifset="#description" name="description" content="{include description}"> *}
        {* <meta n:ifset="#keywords" name="keywords" content="{ifset $seoData->Keywords}{$seoData->Keywords}{else}{ifset #keywords}{include keywords}{else}klicove slova{/ifset}{/ifset}" /> *}

        <meta name="viewport" content="width=device-width, initial-scale=1">
        <meta name="Author" content="{*$siteSettings->get('headAuthor')*}">
        <meta name="robots" content="{*$siteSettings->get('headRobots')*}">

        <base href="{$baseUrl}/">

        <link rel="shortcut icon" sizes="16x16 32x32 48x48" href="{$basePath}/www/images/favicons/favicon.ico">
        <link rel="shortcut icon" type="image/x-icon" href="{$basePath}/www/images/favicons/favicon.ico">
        <!--[if IE]><link rel="shortcut icon" href="{$basePath}/www/images/favicons/favicon.ico"><![endif]-->

        {* http://realfavicongenerator.net/ *}
        <link rel="apple-touch-icon" sizes="180x180" href="{$basePath}/www/images/favicons/apple-touch-icon.png">
        <link rel="icon" type="image/png" href="{$basePath}/www/images/favicons/favicon-32x32.png" sizes="32x32">
        <link rel="icon" type="image/png" href="{$basePath}/www/images/favicons/favicon-16x16.png" sizes="16x16">
        <link rel="manifest" href="{$basePath}/www/images/favicons/manifest.json">
        <link rel="mask-icon" href="{$basePath}/www/images/favicons/safari-pinned-tab.svg" color="#5bbad5">
        <link rel="shortcut icon" href="{$basePath}/www/images/favicons/favicon.ico">
        <meta name="msapplication-config" content="{$basePath}/www/images/favicons/browserconfig.xml">
        <meta name="theme-color" content="#ffffff">

        {* zde pripadne google fonty *}
        {control cssControl, 'front'}

        {* {block head}{/block} *}

        {* {control gaCode} *}

        <!--[if lt IE 9]>
            <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
            <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
        <![endif]-->

        {* <!--[if lte IE 9]>
            <script src="{$basePath}/www/js/flexibility.js"></script>
        <![endif]--> *}

    </head>

    <body class="{$presenter->getName()|lower}-{$presenter->getParameter('action')|lower}" id="lang-{$presenter->locale}">

        {control googleTagManager:body}

        {* https://github.com/jonsuh/hamburgers *}
        {include header.latte}
        {include content}
        {include footer.latte}

        {* zpracovani slugu pro db router *}
        {if $presenter->context->parameters['router']['database']}
            {ifset #slug}
                {capture $slug}{include #slug}{/capture}
                {control slugCreator $slug}
            {/ifset}
        {/if}

            {control jsControl, 'front'}

        {* https://github.com/limonte/sweetalert2 *} {* https://limonte.github.io/sweetalert2/ *}
        {if $flashes}
            {foreach $flashes as $flash}
                <script>
                    swal({
                        title: {$flash->message},
                        // text: "Děkujeme za Váš zájem.",
                        // "warning", "error", "success", "info"
                        type: {$flash->type},
                        // customClass: "nw-alert",
                        // confirmButtonColor: "#eb7b00",
                        // confirmButtonClass: "nw-alert-confirm"
                    });
                </script>
            {/foreach}
        {/if}

        {if $presenter->context->parameters['environment']=='development'}
            {* zde mas prostor pro umisteni browser-sync scriptu *}
        {/if}

        {* {block scripts}{/block} *}

    </body>
</html>
